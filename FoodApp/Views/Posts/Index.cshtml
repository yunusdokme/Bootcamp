@model FoodViewModel
    <div class="row">
        <div class="col-lg-8">
            <div class="bg-white p-4">
                <h1 class="h4 mb-4">Popüler Postlar</h1>
                <hr class="my-3">
                @foreach(var post in Model.Foods){
                     <div class="card bg-transparent border-0 mb-3">
                        <div class="row">
                            <div class="col-8">
                                <h5><a href="/posts/details/@post.Url" class="fw-bold">@post.Title</a></h5>
                                
                                <a href="#" class="badge bg-warning bg-opacity-8 text-danger mb-2 fw-bold tags">Web Geliştirme</a>
                            </div>
                           
                        </div>
                     </div>
                     <hr class="my-3">
                }
            </div>


        </div>
    <div class="col-lg-4">
        <vc:tags-menu></vc:tags-menu>
      
    </div>
    </div>
    
    