@model FoodViewModel
   
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yemek Siparişi</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }
        .container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 20px;
        }
        .main-content {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }
        .meal {
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            margin: 10px;
            padding: 20px;
            width: 250px;
        }
        .meal img {
            max-width: 100%;
            border-radius: 5px;
        }
        .meal h3 {
            margin-top: 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="main-content">
            @foreach(var food in Model.Foods)
            {
                <div class="meal">
                    <img src="~/img/1.jpg" alt="Yemek Fotoğrafı">
                    <a href="/food/detay">
                     <h3>@food.Title</h3></a>
                   
                    <p>Açıklama: @food.Content</p>
                    <p>Fiyat: TL @food.Price</p>
                    <button>Sepete Ekle</button>
                </div>
            }
        </div>
    </div>

    <div class="col-lg-4">
        <vc:Category-menu></vc:Category-menu>
        
    </div>
</body>
</html>

    